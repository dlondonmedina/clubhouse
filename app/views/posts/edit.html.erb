<article class="panel is-link">
    <p class="panel-heading">Editing Post</p>
    <div class="panel-block" id="post-form">
        <%= render 'form', post: @post %>
    </div>
    <div class="panel-block">
      <%= link_to 'Show', @post, class: "button is-success is-medium is-fullwidth" %>  
      <%= link_to 'Back', posts_path, class: "button is-danger is-medium is-fullwidth" %>
    </div>
</article>